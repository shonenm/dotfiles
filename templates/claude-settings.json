{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/dotfiles/scripts/ai-notify.sh claude stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/dotfiles/scripts/ai-notify.sh claude permission"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "__HOME__/dotfiles/scripts/ai-notify.sh claude idle"
          }
        ]
      }
    ]
  }
}
